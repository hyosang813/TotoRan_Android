<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFF00"
    android:orientation="vertical"
    android:gravity="top"
    tools:context="raksam.com.totoran.SingleResultActivity">

    <!-- 画面タイトル -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:background="#FFFFFF"
        android:textColor="@drawable/button_text_color_blue"
        android:textSize="30sp"
        android:text="シングル結果"/>
    <!-- 中抜き文字装飾できねえかな？？？？？？？？？？？？-->

    <!-- 結果表示領域 -->
    <TextView
        android:id="@+id/result_text_view_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="13"
        android:background="@drawable/pick_value_shape"
        android:gravity="top|left"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18sp" />

    <!-- コピーボタン -->
    <Button
        android:id="@+id/single_copy_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/button_shape_nomal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="@string/copy_str"/>

    <!-- 戻るボタン -->
    <Button
        android:id="@+id/single_back_for_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:onClick="goBack"
        android:text="@string/back_str"/>

</LinearLayout>
